generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TYPE ENUMS
enum PET_AGE {
  NEW
  NEUTRAL
  OLD
}

enum PET_SIZE {
  SMOL
  NORMAL
  LARGE
}

// MODELS
model Organization {
  id String @id @default(uuid())

  name          String
  email         String @unique
  password_hash String

  cep      String
  address  String
  whatsapp String

  created_at DateTime @default(now())
  Pet        Pet[]

  @@map("organizations")
}

model Pet {
  id String @id @default(uuid())

  name        String
  description String
  images      String[]

  age               PET_AGE  @default(NEUTRAL)
  size              PET_SIZE @default(NORMAL)
  energy            Int // level of energy
  independence      Int // level of independence
  isClaustrophobic  Boolean
  isAdopted         Boolean  @default(false)
  otherRequirements String[]

  state String
  city  String

  org_id String
  org    Organization @relation(fields: [org_id], references: [id])

  created_at DateTime @default(now())

  @@map("pets")
}
